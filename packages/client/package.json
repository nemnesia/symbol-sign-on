{
  "name": "symbol-sign-on-client",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "redis:start": "docker compose -f compose.redis.yml up -d",
    "redis:stop": "docker compose -f compose.redis.yml down -v",
    "redis-insight:start": "docker compose -f compose.redisinsight.yml up -d",
    "redis-insight:stop": "docker compose -f compose.redisinsight.yml stop",
    "mongo:start": "./scripts/mongodb.sh start",
    "mongo:stop": "./scripts/mongodb.sh stop",
    "mongo:restart": "./scripts/mongodb.sh restart",
    "mongo:logs": "./scripts/mongodb.sh logs",
    "mongo:reset": "./scripts/mongodb.sh reset",
    "mongo:status": "./scripts/mongodb.sh status",
    "mongodb:shell": "./scripts/mongodb.sh shell",
    "prod:build": "./scripts/deploy.sh build",
    "prod:start": "./scripts/deploy.sh start",
    "prod:stop": "./scripts/deploy.sh stop",
    "prod:restart": "./scripts/deploy.sh restart",
    "prod:logs": "./scripts/deploy.sh logs",
    "prod:status": "./scripts/deploy.sh status",
    "prod:backup": "./scripts/deploy.sh backup",
    "prod:update": "./scripts/deploy.sh update",
    "demo": "cd demo && node server.mjs",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.{ts,js,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "sss-module": "^1.0.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
