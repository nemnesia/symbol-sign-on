# 開発環境用の環境変数設定
# ローカル開発用（Docker不使用）

# MongoDB設定（ローカルインスタンス）
MONGODB_URI=mongodb://admin:password@localhost:27017/symbol_sign_auth?authSource=admin

# アプリケーション設定
PORT=3510
NODE_ENV=development
SYMBOL_NETWORK=TEST_NET

# ログ設定
LOG_LEVEL=debug
LOG_FILE_LEVEL=debug
LOG_CONSOLE_LEVEL=debug
LOG_RETENTION_DAYS=7

# セキュリティ設定
ALLOWED_ORIGINS=http://localhost:3510,http://localhost:3001,http://127.0.0.1:3510

# JWT設定（実装時に使用）
JWT_SECRET=development_jwt_secret_change_in_production
JWT_EXPIRES_IN=1h

# Symbol設定（実装時に使用）
SYMBOL_PRIVATE_KEY=development_symbol_private_key
SYMBOL_PUBLIC_KEY=development_symbol_public_key
