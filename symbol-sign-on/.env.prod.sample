# 本番環境用の環境変数設定
# このファイルをコピーして .env.prod として使用してください
# cp .env.prod.sample .env.prod

# MongoDB設定
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=your_secure_password_here_change_this
MONGODB_DATABASE=symbol_sign_auth

# アプリケーション設定
PORT=4510
SYMBOL_NETWORK=MAIN_NET

# ログ設定
LOG_LEVEL=info
LOG_FILE_LEVEL=info
LOG_CONSOLE_LEVEL=warn
LOG_RETENTION_DAYS=30

# セキュリティ設定
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# JWT設定（実装時に使用）
JWT_SECRET=your_jwt_secret_here_change_this
JWT_EXPIRES_IN=1h

# Symbol設定（実装時に使用）
SYMBOL_PRIVATE_KEY=your_symbol_private_key_here_change_this
SYMBOL_PUBLIC_KEY=your_symbol_public_key_here_change_this

# SSL設定
SSL_DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# バックアップ設定
BACKUP_SCHEDULE=0 2 * * *  # 毎日午前2時にバックアップ
BACKUP_RETENTION_DAYS=7
